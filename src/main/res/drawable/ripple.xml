<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lb_basic_card_bg_color">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/lb_playback_progress_color_no_theme" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/lb_playback_progress_color_no_theme"
                android:startColor="@color/lb_playback_progress_color_no_theme"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</ripple>